<merge
	xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- @dimen/temp_titlebar_height should be wrap_content -->
	<ImageView
		android:id="@+id/home"
		android:layout_width="@dimen/titlebar_size"
		android:layout_height="@dimen/titlebar_size"
		android:layout_marginRight="3dp"
		android:background="@drawable/titlebar_icon_background"
		android:src="@drawable/titlebar_home" />
	<TextView
		android:id="@+id/center"
		android:layout_width="0px"
		android:layout_height="@dimen/titlebar_size"
		android:layout_weight="1.0" />
	<ImageView
		android:id="@+id/search"
		android:layout_width="@dimen/titlebar_size"
		android:layout_height="@dimen/titlebar_size"
		android:layout_marginLeft="3dp"
		android:background="@drawable/titlebar_icon_background"
		android:src="@drawable/titlebar_search" />
</merge>
